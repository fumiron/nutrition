    <tr><th class="left">ビタミンA (mg)</th><td class="right"><%= @food.vitamin_a %></td></tr>
    <tr><th class="left">ビタミンD (mg)</th><td class="right"><%= @food.vitamin_d %></td></tr>
    <tr><th class="left">ビタミンE (mg)</th><td class="right"><%= @food.vitamin_e %></td></tr>
    <tr><th class="left">ビタミンK (mg)</th><td class="right"><%= @food.vitamin_k %></td></tr>
    <tr><th class="left">ビタミンB1 (mg)</th><td class="right"><%= @food.vitamin_b1 %></td></tr>
    <tr><th class="left">ビタミンB2 (mg)</th><td class="right"><%= @food.vitamin_b2 %></td></tr>
    <tr><th class="left">ビタミンB6 (mg)</th><td class="right"><%= @food.vitamin_b6 %></td></tr>
    <tr><th class="left">ビタミンB12 (mg)</th><td class="right"><%= @food.vitamin_b12 %></td></tr>
    <tr><th class="left">ビタミンC (mg)</th><td class="right"><%= @food.vitamin_c %></td></tr>
    <tr><th class="left">ナイアシン (mgNE)</th><td class="right"><%= @food.niacin %></td></tr>
    <tr><th class="left">葉酸 (μg)</th><td class="right"><%= @food.folate %></td></tr>
    <tr><th class="left">パントテン酸 (μg)</th><td class="right"><%= @food.pantothenic %></td></tr>
    <tr><th class="left">ナトリウム (mg)</th><td class="right"><%= @food.sodium %></td></tr>
    <tr><th class="left">カリウム (mg)</th><td class="right"><%= @food.potassium %></td></tr>
    <tr><th class="left">カルシウム (mg)</th><td class="right"><%= @food.calcium %></td></tr>
    <tr><th class="left">マグネシウム (mg)</th><td class="right"><%= @food.magnesium %></td></tr>
    <tr><th class="left">リン (mg)</th><td class="right"><%= @food.phosphorus %></td></tr>
    <tr><th class="left">鉄 (mg)</th><td class="right"><%= @food.iron %></td></tr>
    <tr><th class="left">亜鉛 (mg)</th><td class="right"><%= @food.zinc %></td></tr>
    <tr><th class="left">銅 (μg)</th><td class="right"><%= @food.copper %></td></tr>
