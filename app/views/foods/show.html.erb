    <tr><th class="left">ヨウ素 (μg)</th><td class="right"><%= @food.iodine %></td></tr>
    <tr><th class="left">セレン (μg)</th><td class="right"><%= @food.selenium %></td></tr>
    <tr><th class="left">クロム (μg)</th><td class="right"><%= @food.chromium%></td></tr>
    <tr><th class="left">モリブデン (μg)</th><td class="right"><%= @food.molybdenum %></td></tr>
    <tr><th class="left">食塩相当量 (g)</th><td class="right"><%= @food.salt %></td></tr>
