<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2><span class="show-heading">
       <%= @food.name + "の栄養素詳細"%></span>
       <%= link_to "編集", edit_food_path(@food.id), class: :nav__btn %>
       <%= link_to "削除", food_path(@food.id), method: :delete, class: :nav__btn %>
        </h2>
       <table class="table table-bordered">
  <thead>
    <tr><th class="left">食品名</th><td class="right"><%= @food.name %></td></tr>
    <tr><th class="left">カロリー (kcal)</th><td class="right"><%= @food.calorie %></td></tr>
    <tr><th class="left">タンパク質 (g)</th><td class="right"><%= @food.protein %></td></tr>
